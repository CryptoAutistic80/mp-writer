{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../dist/out-tsc",
    "module": "commonjs",
    "types": ["node"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es2021",
    "strict": true,
    "strictNullChecks": true,
    "lib": ["es2021", "dom"]
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx", 
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/ai/ai.service.spec.ts",
    "src/writing-desk-jobs.controller.spec.ts"
  ]
}
