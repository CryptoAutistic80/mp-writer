# Root env.example (copy to .env for local dev)

# Backend API
MONGO_URI=mongodb://localhost:27017/mp_writer
JWT_SECRET=changeme
PORT=4000
APP_ORIGIN=http://localhost:3000
DATA_ENCRYPTION_KEY=

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:4000/api/auth/google/callback

# OpenAI (primary model + overrides)
OPENAI_API_KEY=
OPENAI_MODEL=o4-mini-deep-research
OPENAI_FOLLOWUP_MODEL=gpt-5-mini
OPENAI_COMPOSE_MODEL=gpt-5

# Deep Research tuning
OPENAI_DEEP_RESEARCH_TIMEOUT_MS=900000
OPENAI_DEEP_RESEARCH_TIMEOUT_EXTENSION_MS=300000
OPENAI_DEEP_RESEARCH_POLL_INTERVAL_MS=5000
OPENAI_DEEP_RESEARCH_ENABLE_WEB_SEARCH=true
OPENAI_DEEP_RESEARCH_WEB_SEARCH_CONTEXT_SIZE=medium

# Address lookup (getaddress.io or leave blank)
GETADDRESS_API_KEY=
ADDRESS_DEBUG=0

# Frontend
NEXT_PUBLIC_API_URL=/api
NEXT_BACKEND_ORIGIN=http://localhost:4000
